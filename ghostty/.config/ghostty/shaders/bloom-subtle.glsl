  vec3(1.0130775986052671, -3.9967078676335834, 0.24253562503633297),
  vec3(4.229723673607257, 0.33081361055181563, 0.23570226039551587)
};

float lum(vec4 c) {
  return 0.299 * c.r + 0.587 * c.g + 0.114 * c.b;
}

void mainImage(out vec4 fragColor, in vec2 fragCoord) {
  vec2 uv = fragCoord.xy / iResolution.xy;

  vec4 color = texture(iChannel0, uv);

  // Balanced threshold - catches bright text but not selections
  vec2 step = vec2(1.414) / iResolution.xy;

  for (int i = 0; i < 18; i++) {
    vec3 s = samples[i];
    vec4 c = texture(iChannel0, uv + s.xy * step);
    float l = lum(c);
    // Medium threshold and intensity - noticeable bloom without washing out selections
    if (l > 0.35) {
      color += l * s.z * c * 0.15;
    }
  }

  fragColor = color;
}
