# Ghostty Terminal Configuration
# https://ghostty.org/docs

# ============================================================================
# Font Configuration
# ============================================================================
font-family = JetBrainsMono Nerd Font
font-size = 14
font-feature = -calt  # Disable ligatures (optional, remove if you like them)

# ============================================================================
# Theme: Catppuccin Mocha
# ============================================================================
# Based on https://github.com/catppuccin/catppuccin

# Background and foreground
background = 1e1e2e
foreground = cdd6f4

# Cursor
cursor-color = f5e0dc
cursor-style = block
cursor-style-blink = true

# Selection
selection-background = 585b70
selection-foreground = cdd6f4

# Normal colors
palette = 0=#45475a
palette = 1=#f38ba8
palette = 2=#a6e3a1
palette = 3=#f9e2af
palette = 4=#89b4fa
palette = 5=#f5c2e7
