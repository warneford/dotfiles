palette = 13=#f5c2e7
palette = 14=#94e2d5
palette = 15=#a6adc8

# ============================================================================
# Background Image
# ============================================================================
background-opacity = 0.8

# ============================================================================
# Window Configuration
# ============================================================================
window-padding-x = 8
window-padding-y = 8
window-padding-balance = true
window-theme = dark

# ============================================================================
# Key Bindings for Quarto/R Workflow
# ============================================================================
# Shift+Enter for running code cells
keybind = shift+enter=text:\x1b[13;2u

# Ctrl+Enter for running code cells
keybind = ctrl+enter=text:\x1b[13;5u

# Cmd+, to open Ghostty config (like macOS preferences)
keybind = super+comma=open_config

# ============================================================================
# Shell Integration
# ============================================================================
# Enable cursor positioning and visual feedback
# Detect shell automatically (zsh, bash, fish, etc.)
shell-integration = detect
shell-integration-features = cursor,sudo,title

# ============================================================================
# Alt/Option Key Configuration
# ============================================================================
# Use Option as Alt/Meta for R operators (Alt+-, Alt+m, Alt+i)
macos-option-as-alt = true

# ============================================================================
# Clipboard
# ============================================================================
clipboard-read = allow
clipboard-write = allow
copy-on-select = true

# ============================================================================
# Mouse
# ============================================================================
mouse-hide-while-typing = true

# ============================================================================
# Performance
# ============================================================================
# Enable GPU acceleration
unfocused-split-opacity = 0.9

# ============================================================================
