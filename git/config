# Portable git settings (included from ~/.gitconfig)
# Machine-specific settings (user) stay in ~/.gitconfig

[credential]
	helper = !gh auth git-credential

[push]
	autoSetupRemote = true

[pull]
	rebase = false

[init]
	defaultBranch = main

[alias]
	# Delete local branches whose remote tracking branch is gone (e.g., after PR merge)
	cleanup = !git fetch -p && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs git branch -D 2>/dev/null || echo 'No branches to clean up'
